<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a review</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <%= simple_form_for Review.new, url: room_reviews_path(@room) do |f| %>
      <%= f.input :message %>
      <label>Rating</label>
    <%= f.number_field :rating, value: 1, min: 1, max: 5 %>
    

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Submit Review", class: 'btn btn-danger btn-sm' %>
      </div>
     <% end %>
    </div>
  </div>
</div>



<button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
  Add a review
</button>




          <script>
            $('#star-rating').raty({
              path: '/assets',
              scoreName: 'review[rating]',
      
            });
          </script>
