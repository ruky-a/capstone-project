
<div class="card card-image" style="background-image: url(/assets/couple.jpg);">
  <div class="text-white text-center rgba-stylish-strong py-5 px-4"><h2>Luxury Homes For Short Staycation</h2>
    <p>Plan your Dream Vacation to Experience Hospitality Like Never Before</p>
  </div>
  <div class="py-5"> 
  </div>
</div>

<div class=" box col-12"  style="background-color: rgba(26, 70, 104, 0.20); margin-top: -10px; padding-bottom: 0px;">
  <div class="container">
    <%= form_tag search_path, method: :get do %>
    <div class="row">
      <div class="col-md-4 search">
        <%= text_field_tag :search, params[:search], placeholder: 'Where are you going?   e.g,  New York', class: "form-control search", id: "autolocation"%><br />
      </div>
      <div class="col-md-3 search">
        <%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", class: "form-control datepicker search" %><br />
      </div>
      <div class="col-md-3 search ">
        <%= text_field_tag :end_date, params[:start_date], placeholder: "Check Out", class: "form-control datepicker search" %>
        <br />
      </div>
      <div class="col-md-2 search">
        <%= submit_tag "Search", class: " form-control search btn btn-dark" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


