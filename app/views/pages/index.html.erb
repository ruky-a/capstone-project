<div class="container">
  <div class="row">
   <div class="col-md-4" style="max-width: 500px; text-align: center; padding-top: 20px;">
      <h3> Do you have a luxurious accommodation?</h3>
      <p>Hotel-Resort-Home<br />
      Join Now to Upload your Listing</p><br />
       <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-danger btn-lg' %></li><br /><br />
     </div>

  
      <div class="col-md-8 luxury"style="background-image: url(/assets/luxury5.jpg);">
    </div>
  </div>
</div>


  <br /><br /><br />
  <div class="container">
    <div><h3 class="text-center">Featured Homes Around the World!</h3></div><br />
    <div class="row">
      <% @rooms.each do |room| %>
      <div class="col-md-4 col-sm-12">
        <div class="card"> 
          <% if room.images.attached? %><%= image_tag room.images.last, width: "100%", height: "180px" %>
          <% end %>
          <div class="card-body">
            <h6><%= link_to room.listing_name, room_path(room) %></h6>
            <div id="rate"><span> $<%= room.rate %></span>/
              <span>Per Night</span></div>
              <div id="star_<%= room.id %>"></div> <%= pluralize(room.guest_reviews.count, "review") %><br />
              <%= link_to 'Book Now', room_path(room), class: " btn btn-dark btn-sm" %>
            </div> 
          </div>
        </div>

        <script>
          $('#star_<%= room.id %>').raty({
            path: '/assets',
            readOnly: true,
            score: <%= room.average_rating %>
          });
        </script>
        <% end %>
      </div>
    </div>
    <br />

    <div class="container">
      <div><h3 class="text-center">Top Destinations To Explore</h3></div><br />
      <div class="row">
        <div class="col-md-3 col-sm-12">
