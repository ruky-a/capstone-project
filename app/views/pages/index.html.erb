
<div class="jumbotron jumbotron-fluid">

  <div class="container">
    <div class="col-md-6">
      <div class="box card test-white">
        <div class="card-header" >

          <h3>Plan your Dream Trip</h3>
          <p class="text-center">Experience hospitality like never before !</p>
        </div>

        <div class="card-body">
          <%= form_tag search_path, method: :get do %>
          <div class="row">

            <div class="col-md-12">
              <label>Destination?</label>
              <%= text_field_tag :search, params[:search], placeholder: 'Where are you going?   eg. New York', class: "form-control searche", id: "autolocation"%><br />
            </div>


            <div class="col-md-6">
              <label>Check In</label>
              <%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", class: "form-control datepicker" %><br />
            </div>
            <div class="col-md-6">
              <label>Check Out</label>
              <%= text_field_tag :end_date, params[:start_date], placeholder: "Check Out", class: "form-control datepicker" %>
              <br />
            </div>
          </div>
          <%= submit_tag "Search", class: " form-control search btn btn-dark" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br /><br />


<div class="container">
  <h3 class="text-center">Luxury and Comfortable Homes For your Next Vacation</h3><br />
  <div class="jumbotron card card-image">
    <div class="text-white text-center py-5 px-4">
      <h2>Amazing Homes For Short Staycation</h2>
      <div>
        <h2 class="card-title h1-responsive pt-3 mb-5 font-bold"><strong></strong></h2>
      </div>
    </div>
  </div>

  <br />

  <div class="container">
    <div><h3 class="text-center">Featured Homes Around the World!</h3></div><br />
    <div class="row">
      <% @rooms.each do |room| %>
      <div class="col-md-4 col-sm-12">
        <div class="card"> 
          <% if room.images.attached? %><%= image_tag room.images.last, width: "100%", height: "180px" %>
          <% end %>
          <div class="card-body"> 
            <h6><%= link_to room.listing_name, room_path(room) %></h6>
            <div id="rate"><span> $<%= room.rate %></span>/
              <span>Per Night</span></div>
              <div id="star_<%= room.id %>"></div> <%= pluralize(room.guest_reviews.count, "review") %><br />
              <%= link_to 'Book Now', room_path(room), class: " btn btn-dark btn-sm" %>
            </div> 
          </div>
        </div>

        <script>
          $('#star_<%= room.id %>').raty({
            path: '/assets',
            readOnly: true,
            score: <%= room.average_rating %>
          });
        </script>
        <% end %>
      </div>
    </div>
    <br />



    <div class="container">
      <div><h3 class="text-center">Top Destinations To Explore</h3></div>

      <br />
      <div class="row">
        <div class="col-md-3 col-sm-12">
          <a href="https://capstone-project-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=paris">
            <div class="paris-card"><div class="paris-text"><h3>PARIS</h3></div></div>
          </a>
        </div>
        <div class="col-md-3 col-sm-12">

          <a href="https://capstone-project-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=orlando"> <div class="orlando-card"><div class="orlando-text"><h3>ORLANDO</h3></div></div>
          </a>
        </div>

        <div class="col-md-3 col-sm-12">
          <a href="https://capstone-project-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=newyork"> <div class="newyork-card"><div class="newyork-text"><h3>NEW YORK</h3></div></div>
          </a>
        </div>

        <div class="col-md-3 col-sm-12">
          <a href="https://capstone-project-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=las vegas"> <div class="lasvegas-card"><div class="lv-text"><h3>LAS VEGAS</h3></div></div>
          </a>
        </div>
      </div>
    </div>




    <br />


    <script>
      $('#start_date').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: 0,
        maxDate: '6m',
        onSelect: function(selected) {
          $('#end_date').datepicker("option", "minDate", selected);
          $('#end_date').attr("disabled", false);

        }
      });


      $('#end_date').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: 0,
        maxDate: '6m',
        onSelect: function(selected) {
          $('#start_date').datepicker("option", "maxDate", selected);   

        }
      });

      $(function() {
        $("#autolocation").geocomplete();
      })
    </script>


