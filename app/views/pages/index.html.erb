
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="display-4">Home Rentals For Short Staycation</h2>
    <p class="lead">Experience hopsitality like never before</p>
  </div>
</div>
<br />


<div class="container">
  <div class="box col-md-12"style=" margin-top: -60px;">
    <br />
    <%= form_tag  search_path, method: :get do %>
    <div class="row">
      <div class="col-md-5 where">
        <%= text_field_tag :search, params[:search], placeholder: 'Where are you going?   eg. New York', class: "form-control searche", id: "autolocation"%><br />
      </div>
      <div class="col-md-2 search">

        <%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", class: "form-control datepicker" %><br />

      </div>
      <br /><br />

      <div class="col-md-2 search">

        <%= text_field_tag :end_date, params[:start_date], placeholder: "Check Out", class: "form-control datepicker" %>
      </div><br /><br />


      <div class="col-md-3  search">
        <%= submit_tag "Search", class: " form-control search btn btn-dark btn-block" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

<hr>

<div class="container">
  <div><h3 class="text-center">Featured Homes</h3></div>
  <br /> 
  <div class="row">
    <% @rooms.each do |room| %>
    <div class="col-md-4 col-sm-12">
      <div class="card"> 
        <% if room.images.attached? %><%= image_tag room.images.last, width: "100%", height: "180px" %>
        <% end %>
        <div class="card-body"> 
          <h4><%= link_to room.listing_name, room_path(room) %></h4>  
          <div id="rate"><span> $<%= room.rate %></span></div>
          <%= pluralize(room.reviews.count, "Reviews") %>

          <br /><br />
          <%= link_to 'Book Now', room_path(room), class: " btn btn-danger btn-sm" %>
        </div> 
      </div>
    </div>
    <% end %>
  </div>
</div>
<br /><br />



<div class="container">
  <div><h3 class="text-center">Top Destinations</h3></div>

  <br />
  <div class="row">
    <div class="col-md-3 col-sm-12">
      <a href="https://hospitality-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=paris">
        <div class="paris-card"><div class="paris-text"><h3>PARIS</h3></div></div>
      </a>
    </div>
    <div class="col-md-3 col-sm-12">
      <a href="https://hospitality-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=orlando">
        <div class="orlando-card"><div class="orlando-text"><h3>ORLANDO</h3></div></div>
      </a>
    </div>

    <div class="col-md-3 col-sm-12">
      <a href="https://hospitality-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=newyork"> <div class="newyork-card"><div class="newyork-text"><h3>NEW YORK</h3></div></div>
      </a>
    </div>

    <div class="col-md-3 col-sm-12">
      <a href="https://hospitality-ruky-a.herokuapp.com/search?utf8=%E2%9C%93&search=london"> <div class="london-card"><div class="london-text"><h3>LONDON</h3></div></div>
      </a>
    </div>

  </a>
</div>
</div>


<br />


<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '6m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);

    }
  });


  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '6m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);   

    }
  });

  $(function() {
    $("#autolocation").geocomplete();
  })
</script>


