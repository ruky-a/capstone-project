
<div class ="boxes">
  <div class="row">
    <div class="col-md-4">
      <button id="filter" class="btn btn-outline-danger" data-toggle="collapse" data-target="#collapseCard">
        Advanced filters <i class="fa fa-chevron-down"></i>
      </button>
    </div>
  </div>
  <br />

  <div class="row">
    <br/>
    <div class="collapse" id="collapseCard">

      <%= search_form_for @search, url: search_path, remote: true do |f| %>
      <div class="box">
        <div class="row">
          <div class="col-md-6">
            <label>Rate range:</label>
            <div id="slider-range"></div>
          </div>
          <div class="col-md-3">
            <label>Min price:</label>
            <%= f.text_field :rate_gteq, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <label>Max price:</label>
            <%= f.text_field :rate_lteq, class: "form-control" %>
          </div>
        </div>
        <br/>

        <div class="row">
          <div class="col-md-6">
            <%= text_field_tag :start_date, params[:start_date], readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
          </div>
          <div class="col-md-6">
            <%= text_field_tag :end_date, params[:end_date], readonly: true, placeholder: "End Date", class: "form-control datepicker" %>
          </div>
        </div>
        <br/>

        <div class="row">
          <div class="col-md-4">
            <%= check_box_tag "q[roomtype_eq_any][]", "Entire" %> Hotel
          </div>
          <div class="col-md-4">
            <%= check_box_tag "q[hometypetype_eq_any][]", "Private" %> Home
          </div>
          <div class="col-md-4">
            <%= check_box_tag "q[hometype_eq_any][]", "Shared" %> Resort
          </div>
        </div>
        <br/>



        <div class="row">
          <div class="col-md-4">
            <%= check_box_tag "q[tv_eq]", true %> TV
          </div>
          <div class="col-md-4">
            <%= check_box_tag "q[kitchen_eq]", true %> Kitchen
          </div>
          <div class="col-md-4">
            <%= check_box_tag "q[Internet_eq]", true %> Internet
          </div>
          <div class="col-md-4">
            <%= check_box_tag "q[restaurant_eq]", true %> Heating
          </div>
          <div class="col-md-8">
            <%= check_box_tag "q[air_eq]", true %> Air Conditioning
          </div>
        </div>
        <hr/>

        <div class="text-center">
          <%= f.submit "Search", class: "btn btn-danger" %>
        </div>
        <% end %>
      </div>
    </div>
    <br />


<div class="container"> 
  <div class="row" id="list_room">
<%= render partial: 'host/rooms/list_room', locals: {rooms: @arrRooms}  %>
</div>
</div>





<div class="box boxes">
<div id="map">
</div>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDVI2DOGtO42Xt_-e9elvVoFH2vL0WyaMI&callback=initMap">
</script>

  <script>

    function initMap() {
      var location = {lat: 44.5403, lng: -78.5463}
      

      <% if @arrRooms.length > 0 %>
        location = {lat: <%= @arrRooms[0].latitude %>, lng: <%= @arrRooms[0].longitude %>}
      <% end %>

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: location
      });
        
     var marker, infowindow;

      <% @arrRooms.each do |room| %>
       marker = new google.maps.Marker({
      position: {lat: <%= room.latitude %>, lng: <%= room.longitude %>},
        map: map
      });
  

      var infoWindow = new google.maps.InfoWindow ({
        content: '<div id="content">$"<%= room.rate %></div>'
      });

      infoWindow.open(map, marker);

       <% end %>

     }

</script>
</div>
</div>

<script>
  $(function() {
  $("#q_rate_gteq").val('50');
   $("#q_rate_lteq").val('500');

    $("#slider-range").slider({
      range: true,
      min: 0,
      max: 1000,
      values: [100, 500],
      slide: function(event, ui) {
   $("#q_rate_gteq").val(ui.values[0]);
    $("#q_rate_lteq").val(ui.values[1]);

      }
    });
      $(".ui-widget-header").css('background', '#00A699');
    $(".ui-state-default, .ui-widget-content").css('background', 'white');
    $(".ui-state-default, .ui-widget-content").css('border-color', '#00A699');
  })
</script>
    








  



