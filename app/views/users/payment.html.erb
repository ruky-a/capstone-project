<div class="container">

  <div class="row">
    <div class="col-md-4">
      <ul class="sidebar-list">

        <li class="sidebar-item"><%= link_to "Payment Method",payment_method_path, class: "sidebar-link active" %></li>
      </ul>
    </div>



    <div class="box col-md-6">
      <div class="card-header bg-secondary">Add Payment Method</div>
      <div class="card-body">

        <div class="card" style="margin-bottom: 20px"></div>
        <div class="container">

          <%= form_tag("/add_card", method: "post", id: "add-card") do %>
          <div class="row pull-center">
            <div class="col-md-12">
              <div class="well">
                <div class="row">
                  <div class="col-md-6 form-group">
                    <label>Card Number</label>
                    <input type="text" name="number" class="form-control">
                  </div>


                  <div class="col-md-4 form-group">
                    <label>Expiration</label>
                    <input type="text" placeholder="MM/YY" name="expiry" class="form-control">
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-6 form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control">
                  </div>

                  <div class="col-md-4 form-group">
                    <label>CVV</label>
                    <input type="text" name="CVV" class="form-control">
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-12 text-right">
                    <% if current_user.stripe_id.blank? %>
                    <button class="btn btn-danger btn-block">Add Card</button>
                    <% else %>

                    <button class="btn btn-primary btn-block">Update Card</button>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
</div>
</div>









<script>
  $(function() {
    var card = new Card({
      form: '#add-card',
      container: '.card'
    })
  });
</script>