<hr />
<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
        <div class="card" style="width:300px">
          <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar, class: "avatar2" %>
          <% else %>
          <%= image_tag gravatar_image_url(current_user.email), class: "avatar2" %>
          <% end %>
          <div class="card-body">
            <h4><%= @user.fullname %></h4>
            <p>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></p>

            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-dark" %></li>
          </div>
        </div>
      </div>

      <div class="col-md-4"><br />
        <h3 class="text-center">About me</h3>
        <br />
        <h5 class="text-center">Contact</h5>
        <p class="text-center"><%= @user.email %>
          <br /><%= @user.phone_number%></p>
        </div>

        <div class="col-md-4">
          <%= render 'users/sidebar' %>
        </div>
      </div>
    </div>
  </div>



  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3>Your Listings</h3>
      </div>
      <div class="card-body">
        <% @rooms.each do |room| %>

        <div class="row">
          <div class="col-md-4">
            <p><%= room.listing_name %></p>
            <% if room.images.attached? %><%= image_tag room.images.first, width: "280", height: "180px" %>
            <% end %> 
          </div>
          <div class="col-md-4 offset-md-4"><br />
            <%= link_to "Update", host_room_path(room), class: "btn btn-danger" %>
          </div>
        </div>
        <hr />
        <% end %>
      </div>
    </div>
  </div>
  <br />





  <div class="container">
    <h6>Reviews from Guest (<%= @guest_reviews.count %>)</h6>
    <%= render "reviews/guest_list" %>
  </div>



  <div class="container">
    <h6>Reviews from Host (<%= @host_reviews.count %>)</h6>
    <%= render "reviews/host_list" %>
  </div>
</div>
</div>









