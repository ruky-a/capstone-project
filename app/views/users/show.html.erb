
<div class="box col-10 offset-1">
  <div class="row">
    <div class="col-sm-4">
      <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, class: "rounded-circle", size: 120 %>
      <% else %>
      <%= image_tag gravatar_image_url(current_user.email), class: "avatar2" %>
      <% end %>
    </div>

    <div class="col-sm-4"><br />
      <h4><%= @user.fullname %></h4><br />
      <h5>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h5><br />
      <h6><%= @user.email %></h6><br />
      <h6><%= @user.phone_number%></h6>
    </div>



<%= render 'users/sidebar' %>

<div class="container">
<div class="row">
      <div class="box col-md-4">
  <p>About me</p>
    <h3><%= @user.fullname %></h3>
      <%= @user.description %>

    <p>Listings (<%= @rooms.length %>)</p><br/>
  </div>






   <div class="col-8">
    
    <div class="card">
      
      <div class="card-body">
        <% @rooms.each do |room| %>
        <div class="card-header bg-secondary">
        <h3>Your Listings</h3>
      </div>
        <div class="row">
          <div class="col-md-4">
             <%= link_to room.listing_name, room %>
  <% if room.images.attached? %><%= image_tag room.images.first, width: "100%", height: "180px" %><br />
  <% end %>   
          </div>
          <div class="col-md-6">
        
          </div>
        </div>
        <hr />
        <% end %>
     </div>
   </div>
 </div>
</div>
</div>
</div>
</div>

<div class="container">
<h6>Reviews from Guest (<%= @guest_reviews.count %>)</h6>
  <%= render "reviews/guest_list" %>
</div>
<br />


<div class="container">
<h6>Reviews from Host (<%= @host_reviews.count %>)</h6>
  <%= render "reviews/host_list" %>
</div>
</div>
</div>






    

  
   