<div class="container">
  <h3>Featured Accommodations</h3>
  <hr  />
  <div class="row">
    <% @rooms.each do |room| %>
    <div class=" col-md-3">
      <div class="card"> 
         <% if room.images.attached? %><%= image_tag room.images.first, width: "100%", height: "180px" %>  
        <% end %>

        <div class="card-body room"> 
         <h6><%= link_to room.listing_name, room_path(room) %>
            <span class="pull-right"> $<%= room.rate %></span></h6>
           <%= pluralize(room.guest_reviews.count, "review") %><br />
            <div id="star_<%= room.id %>"></div> <%= pluralize(room.guest_reviews.count, "review") %>


       
         </div>
       </div>
       </div>

          <script>
      $('#star_<%= room.id %>').raty({
        path: '/assets',
        readOnly: true,
        score: <%= room.average_rating %>
      });
    </script>
    <% end %>
  </div>
</div>

       

  