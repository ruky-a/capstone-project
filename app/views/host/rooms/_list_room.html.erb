<div class="container">
  <div class="row">
    <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="card"> 
        <div class="card-header">
         <% if room.images.attached? %><%= image_tag room.images.first, width: "100%", height: "180px" %>  
        
       </div>
        <div class="card-body"> 
         <h4><%= link_to room.listing_name, room_path(room) %></h4>  
        
            <span> $<%= room.rate %></span>
            <span>Per Night</span>
          
            <div id="star_<%= room.id %>"></div> <%= pluralize(room.guest_reviews.count, "review") %>
          </div>
             <div class="footer">
          <%= link_to 'Book Now', room_path(room), class: " btn btn-danger btn-sm" %><br />
        </div>
        <br />
      </div>
    </div>
    <% end %>
       <% end %>
</div>
</div>
  
  
