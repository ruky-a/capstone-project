<div class="container">
  <div class="row">
    <% @rooms.each do |room| %>
    <div class="col-md-3">
      <div class="card"> 
        <div class="card-header">
         <% if room.images.attached? %><%= image_tag room.images.first, width: "100%", height: "150px" %>  
        <% end %>
       </div>
        <div class="card-body"> 
        <h6><%= link_to room.listing_name, room_path(room) %></h6>  
            <span> $<%= room.rate %></span>/<span>per night</span><br />
           <%= pluralize(room.guest_reviews.count, "review") %><br />
          <%= link_to 'Book Now', room_path(room), class: " btn btn-dark btn-sm" %>
         </div>
       </div>
       </div>
    <% end %>
  </div>
</div>

       

  