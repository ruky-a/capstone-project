<div class="modal fade" id="roomrate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      
        <h4 class="modal-title" id="roomrate">Add Rate</h4>
      </div>
       <%= form_for @room, url: host_room_path(@room) do |f| %>
       <div class="modal-body">
          <label>Room Rate</label>
     <%= f.text_field :rate, placeholder: "eg: $100", class: "form-control", required: true %>
             
       </div>
         <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       <%= f.submit "Add rate" , class: 'btn btn-primary' %>
        <div id='preview'></div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>


