
<div class="conatiner">
  <div class="row">
    <div class="col-md-3">
      <%= render 'host/rooms/room_menu' %>
    </div>

   
       <div class="box col-md-7">
  <% if @room.images.attached? %><%= image_tag @room.images.first, width: "100%", height: "450px" %>
  <% end %>
</div>
</div>
<br />





<div class="box col-md-6 offset-md-3">
  <%= link_to @room.listing_name, @room.web_url %>
  <br /><br />
   <p>Description:</p><%= @room.description %></p>

  <p><%= @room.rate %> <a>USD</a></p>
  <br />

     <%= link_to 'Preview As Guest...', room_path(@room), class: 'btn btn-warning' %>
 </div>
</div>
<br />


    <% @room.amenities.each do |amenity| %>
<div class="container">
  <div class="row text-center row-space-1">
    <div class="col-md-3 ">
      <i class="fa fa-home fa-2x"></i>
    </div>


    <div class="col-md-3 ">
      <i class="fa fa-user fa-2x"></i>
    </div>

    <div class="col-md-3 ">
      <i class="fa fa-bed fa-2x"></i>
    </div>

    <div class="col-md-3">
      <i class="fa fa-bath fa-2x"></i>
    </div>

  </div>

  <div class="row text-center">
    <div class="col-md-3"><%= amenity.hometype %></div>
    <div class="col-md-3"><%= pluralize(amenity.accommodate, "Guest") %></div>
    <div class="col-md-3"><%= pluralize(amenity.bedroom, "Bedroom") %></div>
    <div class="col-md-3"><%= pluralize(amenity.bathroom, "Bathroom") %></div>
  

 <% end %>
</div>
</div>
</div>
<br />





     <div class="container">
      <%= pluralize(@guest_reviews.count, "Review") %>
      <span id="average-rating"></span>
          <div><%= render "reviews/guest_list" %>
         </div>
       </div>
       <br />
  

<%= render 'host/photos/photos_list' %>


<div class="container">
<div style="width: 500px; height:500px">

  <video id='my-video' class='video-js vjs-big-play-centered vjs-fluid' controls preload='auto' width='auto' height='auto'
  poster="<%= image_path('black.jpg') %>" data-setup='{}'>
    <% if @room.video.attached? %>
      <source src="<%= url_for(@room.video)%>" type='video/mp4'>
        <% end %>
    <noscript>
      <p class='vjs-no-js'>
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
      </p>
    </noscript>
  </video>
  </div>
</div>
<%= render 'host/rooms/modal' %>
   <%= render 'host/rooms/roomratemodal' %>
     <%= render 'host/rooms/editmodal' %>

<br />

</div>
</div>


</div>

