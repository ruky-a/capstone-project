
<div class="container">

<% if @room.images.attached? %>
<div class="row">
<% @room.images.each do |image| %>
<div class="col-md-4">
<div class="card">
<div class="card-header">
<%= image_tag image, width: "100%", height: "100%" %>
</div>
<div class="card-footer">
<span class="pull-right">
<%= link_to host_room_path(@room.id, image), remote: true, :onclick => 'remove_image('+image.to_s+')', method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
<i class="fa fa-trash-o" aria-hidden="true"></i></span>
<% end %>
</div>
</div>
</div> 
<% end %>
</div>
<% end %>
</div> 




<br /><br />







<script>
  function remove_image(id) {
    document.getElementById('photo_'+id).remove();
  }
  
</script>